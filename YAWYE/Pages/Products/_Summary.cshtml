@using YAWYE.Core
@model Product

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Name</h3>
        <h4>@Model.Make</h4>
    </div>
    <div class="panel-body">
        <span>Kcal: @Model.Kcal</span>
        <span>Protein: @Model.Protein</span>
        <span>Carbohydrates: @Model.Carbohydrates</span>
        <span>Fat: @Model.Fat</span>
        <span>Fiber: @Model.Fiber</span>
        <span>Price: @Model.Price</span>
        <span>Barcode: @Model.BarCode</span>
    </div>
    <div class="panel-footer">
        <a class="btn btn-primary"
           asp-page="./Detail"
           asp-route-restaurantId="@Model.Id">
            <i class="glyphicon glyphicon-zoom-in">Show details</i>
        </a>
        <a class="btn btn-warning"
           asp-page="./Edit"
           asp-route-restaurantId="@Model.Id">
            <i class="glyphicon glyphicon-edit">Edit</i>
        </a>
        <a class="btn btn-danger"
           asp-page="./Delete"
           asp-route-restaurantId="@Model.Id">
            <i class="glyphicon glyphicon-trash">Delete</i>
        </a>
    </div>
</div>