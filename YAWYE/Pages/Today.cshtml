@page "{dayId:int?}"
@model YAWYE.Pages.TodayModel
@{

}

<form method="post" enctype="multipart/form-data">
    <div class="input-group date">
        <input type="date" class="form-control" id="datePicker" asp-for="Day.Date">
        <div class="input-group-addon">
        </div>
    </div>
    <div class="container-fluid" id="meals">
        <div id="breakfast">
            <div class="card-header border">Breakfast<button type="button" class="btn fas fa-plus-circle"></button></div>
            <div class="card-body border">

            </div>
            <div class="card-footer border"><button type="button" class="btn fas fa-trash" title="Clear"></button></div>
        </div>
        <div id="lunch">
            <div class="card-header border">Lunch<button type="button" class="btn fas fa-plus-circle"></button></div>
            <div class="card-body border">

            </div>
            <div class="card-footer border"><button type="button" class="btn fas fa-trash" title="Clear"></button></div>
        </div>
        <div id="dinner">
            <div class="card-header border">Dinner<button type="button" class="btn fas fa-plus-circle"></button></div>
            <div class="card-body border">

            </div>
            <div class="card-footer border"><button type="button" class="btn fas fa-trash" title="Clear"></button></div>
        </div>
        <div id="supper">
            <div class="card-header border">Supper<button type="button" class="btn fas fa-plus-circle"></button></div>
            <div class="card-body border">

            </div>
            <div class="card-footer border"><button type="button" class="btn fas fa-trash" title="Clear"></button></div>
        </div>
        <div id="snacks">
            <div class="card-header border">Snacks<button type="button" class="btn fas fa-plus-circle"></button></div>
            <div class="card-body border">

            </div>
            <div class="card-footer border"><button type="button" class="btn fas fa-trash" title="Clear"></button></div>
        </div>
    </div>
    <button class="btn fas fa-plus-circle" type="submit"></button>
</form>
@if (Model.Message != null)
{
    <div class="alert-info">@Model.Message</div>
}

<div class="container-fluid" id="charts">

</div>

<style>
    .input-group {
        width: min-content;
    }

    #meals {
        font-family: 'Comic Sans MS';
        margin-top: 2%;
    }

    .card-footer {
        margin-bottom: 1%;
    }

        .card-footer button {
            color: red;
        }

    .card-header [class="btn fas fa-plus-circle"] {
        float: right;
        color: green;
    }
</style>

