@page "{dayId:int?}"
@model YAWYE.Pages.Days.TodayModel
@{

}
<input type="hidden" asp-for="Day.OwnerName" />
<input type="hidden" asp-for="Day.DayId" />
<form method="get">
    <div class="input-group date">
        <input type="date" class="form-control" id="datePicker" asp-for="Day.Date" />
        <div class="input-group-addon">
        </div>
    </div>
</form>
<div class="container-fluid" id="meals">
    <div id="breakfast">
        <div class="card-header border">
            Breakfast<a class="btn fas fa-plus-circle" asp-route-dayId="@Model.Day.DayId"
                        asp-route-category="1"
                        asp-page="./UpdateDay"></a>
        </div>
        <div class="card-body border">
            @foreach (var meal in Model.TodayMeals.Where(m => (int)m.Category == 1))
            {
                <div>@meal.Name</div>
            }
        </div>
        <div class="card-footer border"><button type="button" class="btn fas fa-trash" title="Clear"></button></div>
    </div>
    <div id="lunch">
        <div class="card-header border">
            Lunch<a class="btn fas fa-plus-circle" asp-route-dayId="@Model.Day.DayId"
                    asp-route-category="2"
                    asp-page="./UpdateDay"></a>
        </div>
        <div class="card-body border">
            @foreach (var meal in Model.TodayMeals.Where(m => (int)m.Category == 2))
            {
                <div>@meal.Name</div>
            }
        </div>
        <div class="card-footer border"><button type="button" class="btn fas fa-trash" title="Clear"></button></div>
    </div>
    <div id="dinner">
        <div class="card-header border">
            Dinner<a class="btn fas fa-plus-circle" asp-route-dayId="@Model.Day.DayId"
                     asp-route-category="3"
                     asp-page="./UpdateDay"></a>
        </div>
        <div class="card-body border">
            @foreach (var meal in Model.TodayMeals.Where(m => (int)m.Category == 3))
            {
                <div>@meal.Name</div>
            }
        </div>
        <div class="card-footer border"><button type="button" class="btn fas fa-trash" title="Clear"></button></div>
    </div>
    <div id="supper">
        <div class="card-header border">
            Supper<a class="btn fas fa-plus-circle" asp-route-dayId="@Model.Day.DayId"
                     asp-route-category="4"
                     asp-page="./UpdateDay"></a>
        </div>
        <div class="card-body border">
            @foreach (var meal in Model.TodayMeals.Where(m => (int)m.Category == 4))
            {
                <div>@meal.Name</div>
            }
        </div>
        <div class="card-footer border"><button type="button" class="btn fas fa-trash" title="Clear"></button></div>
    </div>
    <div id="snacks">
        <div class="card-header border">
            Snacks<a class="btn fas fa-plus-circle" asp-route-dayId="@Model.Day.DayId"
                     asp-route-category="5"
                     asp-page="./UpdateDay"></a>
        </div>
        <div class="card-body border">
            @foreach (var meal in Model.TodayMeals.Where(m => (int)m.Category == 5))
            {
                <div>@meal.Name</div>
            }
        </div>
        <div class="card-footer border"><button type="button" class="btn fas fa-trash" title="Clear"></button></div>
    </div>
</div>

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<div class="container-fluid" id="charts">

</div>

<style>
    .input-group {
        width: min-content;
    }

    #meals {
        font-family: 'Comic Sans MS';
        margin-top: 2%;
    }

    .card-footer {
        margin-bottom: 1%;
    }

        .card-footer button {
            color: red;
        }

    .card-header [class="btn fas fa-plus-circle"] {
        float: right;
        color: green;
    }
</style>

